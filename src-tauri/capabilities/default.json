{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "autostart:allow-enable",
    "core:window:default",
    "core:window:allow-start-dragging",
    "fs:default",
    {
      "identifier": "fs:allow-app-write-recursive",
      "allow": [{"path": "$APPDATA/**/*"}]
    },
    {
      "identifier": "fs:scope",
      "allow": [{"path": "$APPDATA/**/*"}]
    }
  ]
}